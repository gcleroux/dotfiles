{
    "name": "custom-snippets",
    "author": "gcleroux",
    "engines": {
        "vscode": "^1.11.0"
    },
    "contributes": {
        "snippets": [
            {
                "language": "lua",
                "path": "./lua.json"
            },
            {
                "language": [
                    "markdown",
                    "rmd"
                ],
                "path": "./markdown.json"
            },
            {
                "language": "python",
                "path": "./python.json"
            },
            {
                "language": [
                    "shellscript",
                    "shell",
                    "sh",
                    "zsh"
                ],
                "path": "./shell.json"
            }
        ]
    }
}
